# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# 4 space indentation
indent_style = space
indent_size = 4

# Set default charset
charset = utf-8

# Trim trailing whitespace
trim_trailing_whitespace = true

[*.{java,xml}]
# 4 space indentation for Java and XML files
indent_style = space
indent_size = 4

[*.md]
# 2 space indentation for Markdown files
indent_style = space
indent_size = 2

[*.gradle]
# 4 space indentation for Gradle files
indent_style = space
indent_size = 4

[*.properties]
# 2 space indentation for properties files
indent_style = space
indent_size = 2

[*.{bat,sh}]
# Use tabs for scripts
indent_style = tab

[Makefile]
# Use tabs for Makefiles
indent_style = tab

[*.yml]
# 2 space indentation for YAML files
indent_style = space
indent_size = 2
